<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
	  "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
	  "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">
<policyconfig>

  <vendor>Huayra GNU/Linux</vendor>
  <vendor_url>http://www.conectarigualdad.gob.ar/</vendor_url>
  <icon_name>preferences-system-network</icon_name>

  <action id="ar.gob.conectarigualdad.huayra-hostname-set">
    <description>Configurar nombre de host</description>
    <message>Configurar nombre de host</message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/sbin/huayra-hostname-set</annotate>
  </action>

</policyconfig>
